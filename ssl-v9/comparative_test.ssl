
fn main() {
    println("Launching SonnerStudio Language v9 - Comparative Render Engine...");

    html {
        <style>
            :root {
                --primary: #00f2ff;
                --secondary: #7000ff;
                --bg-dark: #0a0a0a;
                --glass: rgba(255, 255, 255, 0.05);
                --glass-border: rgba(255, 255, 255, 0.1);
            }
            body {
                margin: 0;
                padding: 0;
                background: var(--bg-dark);
                color: white;
                font-family: 'Segoe UI', system-ui, sans-serif;
                height: 100vh;
                display: flex;
                flex-direction: column;
                overflow: hidden;
            }
            .header {
                padding: 20px 40px;
                background: linear-gradient(90deg, rgba(0,0,0,0.8), transparent);
                border-bottom: 1px solid var(--glass-border);
                display: flex;
                justify-content: space-between;
                align-items: center;
                backdrop-filter: blur(10px);
            }
            h1 {
                margin: 0;
                font-weight: 200;
                letter-spacing: 2px;
                background: linear-gradient(135deg, var(--primary), white);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }
            .container {
                display: flex;
                flex: 1;
                padding: 40px;
                gap: 40px;
                align-items: center;
                justify-content: center;
            }
            .card {
                flex: 1;
                max-width: 500px;
                height: 400px;
                background: var(--glass);
                border: 1px solid var(--glass-border);
                border-radius: 20px;
                padding: 30px;
                display: flex;
                flex-direction: column;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                position: relative;
                overflow: hidden;
            }
            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.5);
                border-color: rgba(255, 255, 255, 0.3);
            }
            .card-title {
                font-size: 1.2rem;
                margin-bottom: 20px;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: #888;
                border-bottom: 1px solid var(--glass-border);
                padding-bottom: 10px;
            }
            
            /* HTML Implementation Strategy */
            .html-demo img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                border-radius: 12px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            }

            /* CSS Implementation Strategy */
            .css-demo-box {
                width: 100%;
                height: 250px;
                border-radius: 12px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                /* The Critical Test: Can CSS load asset:// directly? */
                background-image: url('asset://localhost/ssl-v9/test_logo.png');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                background-color: rgba(0,0,0,0.3); /* Fallback */
                position: relative;
            }

            .status-indicator {
                margin-top: auto;
                padding: 10px;
                border-radius: 8px;
                font-size: 0.9rem;
                display: flex;
                align-items: center;
                gap: 10px;
            }
            .success { background: rgba(34, 197, 94, 0.2); color: #4ade80; }
            .warning { background: rgba(234, 179, 8, 0.2); color: #facc15; }
            .badge {
                padding: 4px 8px;
                border-radius: 4px;
                font-size: 0.7rem;
                font-weight: bold;
                text-transform: uppercase;
            }
            .badge-html { background: #e34c26; color: white; }
            .badge-css { background: #264de4; color: white; }

        </style>

        <div class="header">
            <h1>SSL v9 <span style="font-size: 0.5em; opacity: 0.7;">HYBRID RUNTIME</span></h1>
            <div style="font-family: monospace; opacity: 0.5;">v9.0.0-release</div>
        </div>

        <div class="container">
            <!-- Left: Explicit HTML -->
            <div class="card html-demo">
                <div class="card-title">
                    <span class="badge badge-html">HTML</span> Strategy
                </div>
                <!-- Direct Image Tag - Debugging Paths -->
                <div style="display: flex; gap: 10px; overflow-x: auto; padding-bottom: 10px; flex-wrap: wrap;">
                    <div style="min-width: 100px;">
                        <div style="font-size: 0.6em; margin-bottom: 5px;">Relative 1</div>
                        <img src="/ssl-v9/test_logo.png?v=rel1" style="width: 80px; height: 80px; background: #222; object-fit: contain;"
                             onerror="this.style.border='2px solid red'; this.style.opacity='0.5';" 
                             onload="this.style.border='2px solid #4ade80';">
                    </div>
                    
                    <div style="min-width: 100px;">
                        <div style="font-size: 0.6em; margin-bottom: 5px;">Relative 2</div>
                        <img src="ssl-v9/test_logo.png?v=rel2" style="width: 80px; height: 80px; background: #222; object-fit: contain;"
                             onerror="this.style.border='2px solid red'; this.style.opacity='0.5';" 
                             onload="this.style.border='2px solid #4ade80';">
                    </div>

                    <div style="min-width: 100px;">
                        <div style="font-size: 0.6em; margin-bottom: 5px;">Absolute URI</div>
                        <img src="asset://localhost/ssl-v9/test_logo.png?v=abs1" style="width: 80px; height: 80px; background: #222; object-fit: contain;"
                             onerror="this.style.border='2px solid red'; this.style.opacity='0.5';" 
                             onload="this.style.border='2px solid #4ade80';">
                    </div>
                    
                    <div style="min-width: 100px;">
                        <div style="font-size: 0.6em; margin-bottom: 5px;">Root Rel</div>
                        <img src="/test_logo.png?v=root1" style="width: 80px; height: 80px; background: #222; object-fit: contain;"
                             onerror="this.style.border='2px solid red'; this.style.opacity='0.5';" 
                             onload="this.style.border='2px solid #4ade80';">
                    </div>
                </div>
                
                <div id="status-html" class="status-indicator warning" style="font-size: 0.8em;">
                    Testing Relative Paths...
                </div>
                <p style="font-size: 0.8rem; opacity: 0.7; margin-top: 10px;">
                    Direct DOM element. Full control over loading state and error handling.
                </p>
            </div>

            <!-- Right: CSS Background -->
            <div class="card css-demo">
                <div class="card-title">
                    <span class="badge badge-css">CSS</span> Strategy
                </div>
                <!-- CSS Background - The "Old Way" -->
                <div class="css-demo-box"></div>
                
                <!-- CSS Background Image -->
                <div style="display: flex; gap: 10px; overflow-x: auto; padding-bottom: 10px; flex-wrap: wrap;">
                    <div>
                        <div style="font-size: 0.6em; margin-bottom: 5px;">Relative Path</div>
                        <div class="css-test-box css-rel-path"></div>
                    </div>
                    <div>
                        <div style="font-size: 0.6em; margin-bottom: 5px;">Absolute URI</div>
                        <div class="css-test-box css-abs-path"></div>
                    </div>
                 </div>
                
                <div id="status-css" class="status-indicator warning" style="font-size: 0.8em;">
                    ⚠️ CSS Visual Check
                </div>
                <p style="font-size: 0.8rem; opacity: 0.7; margin-top: 10px;">
                    CSS `background-image` loading test.
                </p>
            </div>
        </div>
    }
}
