{
  "name": "sonner-studio-language",
  "displayName": "Sonner Studio Language",
  "description": "Language support for SSL",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ssl",
        "aliases": [
          "Sonner Studio Language",
          "ssl"
        ],
        "extensions": [
          ".ssl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ssl",
        "scopeName": "source.ssl",
        "path": "./syntaxes/ssl.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SSL",
      "properties": {
        "ssl.executablePath": {
          "type": "string",
          "default": "ssl",
          "description": "Path to ssl executable"
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:ssl"
  ]
}